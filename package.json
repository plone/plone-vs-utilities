{
  "name": "plone-vs-utilities",
  "displayName": "Plone support for VSCode",
  "description": "Development utilities for Plone in VSCode: ZCML and TAL language support, snippets for XML, Python, JavaScript and React.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "icon": "images/plone.png",
  "publisher": "plone",
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "plone",
    "zope",
    "zcml",
    "volto",
    "snippets",
    "vs_code"
  ],
  "license": "GPL-3.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zcml",
        "extensions": [
          ".zcml"
        ],
        "aliases": [
          "ZCML"
        ],
        "configuration": "./src/language/zcml.json"
      },
      {
        "id": "tal",
        "extensions": [
          ".pt"
        ],
        "aliases": [
          "TAL",
          "ZPT",
          "Page Templates",
          "Zope Page Templates"
        ],
        "configuration": "./src/language/tal.json"
      }
    ],
    "grammars": [
      {
        "language": "zcml",
        "scopeName": "source.zcml",
        "path": "./src/grammar/zcml.json"
      },
      {
        "language": "tal",
        "scopeName": "source.tal",
        "path": "./src/grammar/tal.json"
      }
    ],
    "configuration": {
      "title": "Plone: ZCML & TAL Language",
      "properties": {
        "zcmlLanguage.zprettypath": {
          "type": "string",
          "description": "Enter the absolute path of zpretty",
          "default": "uvx zpretty"
        },
        "zcmlLanguage.zprettyoptions": {
          "type": "string",
          "description": "Enter the command line options to append to the zpretty call when using with ZCML files. By default we pass the -z option signaling that this file is a ZCML file",
          "default": "-z"
        },
        "talLanguage.zprettyoptions": {
          "type": "string",
          "description": "Enter the command line options to append to the zpretty call when using with Page Templates. By default we pass the -x option signaling that this file is a Zope Page Template file",
          "default": ""
        }
      }
    },
    "snippets": [
      {
        "language": "xml",
        "path": "./src/snippets/xml.json"
      },
      {
        "language": "python",
        "path": "./src/snippets/python.json"
      },
      {
        "language": "javascript",
        "path": "./src/snippets/javascript.json"
      },
      {
        "language": "javascriptreact",
        "path": "./src/snippets/javascriptreact.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
